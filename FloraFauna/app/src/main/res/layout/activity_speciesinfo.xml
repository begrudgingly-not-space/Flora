<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/CommonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:translationZ="1dp"
            android:padding="8dp"
            android:text="Loading common name"
            android:textColor="@color/white"
            android:background="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ScientificName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:baselineAligned="false"
            android:padding="8dp"
            android:text="Loading scientific name."
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:background="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CommonName"
            android:padding="8dp"
            android:text="Loading description name"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:linksClickable="true"/>

        <TextView
            android:id="@+id/EoLLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Description"
            android:padding="8dp"
            android:text="Loading EoL Link"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:linksClickable="true"/>

        <!--
        <TextView
            android:id="@+id/ImageLinkBar"
