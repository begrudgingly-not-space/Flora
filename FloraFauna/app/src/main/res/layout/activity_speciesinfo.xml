<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGrey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scientific Name"
            android:padding="10dp"
            android:textColor="@color/whiteGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/darkGreen"/>
        <TextView
            android:id="@+id/ScientificName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="No scienctific name found."
            android:textColor="@color/darkGreen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Common Name"
            android:padding="10dp"
            android:textColor="@color/whiteGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/darkGreen"/>
        <TextView
            android:id="@+id/CommonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="No common name found."
            android:textColor="@color/darkGreen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="10dp"
            android:textColor="@color/whiteGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/darkGreen"/>
        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="No description found."
            android:textColor="@color/darkGreen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image"
            android:padding="10dp"
            android:textColor="@color/whiteGrey"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/darkGreen"/>
        <TextView
            android:id="@+id/ImageLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="No image found."
            android:textColor="@color/darkGreen"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EoL"
            android:textColor="@color/whiteGrey"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/darkGreen"/>
        <TextView
            android:id="@+id/EoLLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="No Encyclopedia of Life link found."
            android:textColor="@color/darkGreen"/>
    </LinearLayout>
</ScrollView>