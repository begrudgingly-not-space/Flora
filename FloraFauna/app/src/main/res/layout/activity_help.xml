<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundFloating">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Page"
            android:padding="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="The search page allows you to search for species by typing the common name or scientific name of the species into the search bar. You can also search for species by state and county/parish by typing this information into the search bar. The radio buttons allow you to select your search method. After performing a search, you can filter results by location, genus, and kingdom."
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's Around Me"
            android:padding="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="By clicking &quot;What's Around Me?&quot;, you can view information about different species that are near your location. You can change the search radius of the &quot;What's Around Me?&quot; feature in the settings page. "
            android:textColor="?attr/colorPrimary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map Page"
            android:padding="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="The map page allows you to view the occurrences of a species on a map by typing the common name or scientific name of the species into a search bar. You can view the occurrences of a species in a state, county/parish, or a certain radius from your position. The search radius can be changed in the settings page."
            android:textColor="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Recordings Page"
            android:padding="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="The personal-recordings page allows you to upload images of species from either your personal storage or taking a picture directly using your phone's camera. These images can then be given a name and a description. You can group similar images into folders."
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings Page"
            android:padding="10dp"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="8dp"
            android:text="The settings page allows you to clear your search history, change the color scheme of the application, and change the search radius of the &quot;What's Around Me?&quot; and nearby sightings features."
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>

