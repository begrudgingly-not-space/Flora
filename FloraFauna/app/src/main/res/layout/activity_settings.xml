<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGrey">

    <LinearLayout
        android:id="@+id/Images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Images"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="10"/>
        <Switch
            android:id="@+id/ImageSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ClearSearchHistory"
        android:layout_below="@id/Images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_search_history"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="10"/>
        <Button
            android:id="@+id/button3"
            android:theme="@style/Button.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Clear" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ClearCachedData"
        android:layout_below="@id/ClearSearchHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_cached_data"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="10"/>
        <Button
            android:id="@+id/button4"
            android:theme="@style/Button.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Clear" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Mileage"
        android:layout_below="@id/ClearCachedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mileage"
            android:textColor="@color/darkGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="11"/>
        <Spinner
            android:id="@+id/miles"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:entries="@array/millage"
            android:prompt="@string/miles"
            android:layout_weight="0.5"/>
    </LinearLayout>


</RelativeLayout>
