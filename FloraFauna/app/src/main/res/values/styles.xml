<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="colorAccent">@color/midGreen</item>
        <item name="colorBackgroundFloating">@color/whiteGrey</item>

    </style>

    <style name="AppThemeCherry" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/darkOrange</item>
        <item name="colorPrimaryDark">@color/darkOrange</item>
        <item name="colorAccent">@color/midOrange</item>
        <item name="colorBackgroundFloating">@color/paleOrange</item>
    </style>
