<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluegreen</item>
        <item name="colorPrimaryDark">@color/bluegreen</item>
        <item name="colorAccent">@color/mint</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="Button.Dark" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
